<!DOCTYPE html>
<html lang="en">

<!-- Meta Tag -->
<%- include('../partials/meta') %>

    <body>
        <!-- Header -->
        <%- include('../partials/header.ejs')%>
            <div class="container p-3">
                <div class="row">
                    <div class="col-12 d-flex justify-content-center align-items-center">
                        <img src="/images/profile-circle.svg" alt="" height="100">
                    </div>
                </div>

                <div class="container p-0 m-0 border-bottom align-items-center" style="height: 4em">
                    <div class="row align-items-center h-100">
                        <div class="col-3 fs-5">
                            ID:
                        </div>

                        <div class="col-5 fs-5">
                            <%=primaryUser.id %>
                        </div>

                    </div>
                </div>
                <div class="container p-0 m-0 border-bottom" style="height: 6em">
                    <span class="fs-5">Password:</span> <br>
                    <span>
                        <% for( let index=0; index < primaryUser.password.length; index++ ) { %>
                            *
                            <% } %>
                    </span><br>
                </div>
                <div class="container p-0 m-0 border-bottom align-items-center" style="height: 4em">
                    <div class="row align-items-center h-100">
                        <div class="col-3 fs-5">
                            Email:
                        </div>

                        <div class="col-5 fs-5">
                            <%= primaryUser.email %>
                        </div>

                    </div>
                </div>

                <div class="container p-0 m-0 border-bottom" style="height: 6em">
                    <span class="fs-5">Security Answer: </span> <br>
                    <span>
                        <% for( let index=0; index < primaryUser.answer.length; index++ ) { %>
                            *
                            <% } %>
                    </span><br>
                </div>

                <div style="height: 100px;"></div>
                <!-- Bottom Nav -->
                <%- include('../partials/navbar') %>
            </div>
    </body>

</html>