<!DOCTYPE html>
<html lang="en">
  <%- include('partials/meta') %>

  <body>
    <div class="container p-3" style="height: 100vh">
      <!-- Header -->
      <div class="fs-3 fw-semibold d-flex mb-4">
        <div class="me-1">
          <a href="/members"><img src="/images/less-than.svg" alt="" /></a>
        </div>
        <div class="ms-5">Exercise Catalog</div>
      </div>

      <div class="container fs-4 fw-medium m-0 p-0 mb-1">Workout Routine</div>

      <div class="container m-0 p-0 fw-medium fs-5 mb-1">Exercises</div>

      <div class="container h-25 mb-4 overflow-auto border">
        <% const randomExercises = ["Exercise 1", "Exercise 2", "Exercise 3",
        "Exercise 4", "Exercise 5"]; %> <% for (const exercise of
        randomExercises) { %>
        <div class="container m-0 p-0 border-bottom d-flex align-items-center">
          <div
            class="d-inline align-self-center d-flex my-auto"
            style="width: 40px"
          >
            <button
              class="rounded-circle border-0 m-0 p-0 my-auto"
              style="height: 30px; width: 30px"
            ></button>
          </div>

          <div class="w-50 vstack gap-0">
            <div class="d-inline text-secondary" style="font-size: 14px">
              <%= exercise %>
            </div>
          </div>
        </div>
        <% } %>
      </div>

      <div class="conteiner m-0 p-0">
        <form class="mb-4" action="">
          <input class="btn btn-dark w-100" type="submit" value="Add" />
        </form>
      </div>
    </div>
  </body>
</html>
