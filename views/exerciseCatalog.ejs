<!DOCTYPE html>
<html lang="en">

<%- include('partials/meta') %>


  <body>
    <div class="container p-3 overflow-auto" style="height: 100vh; margin-bottom: 10vh;">
      <!-- Header -->

      <div class="fs-5 fw-semibold d-flex mb-4 align-items-center">
        <div>
          <a href="/members"><img src="/images/less-than.svg" alt=""></a>
        </div>
        <div class="ms-3">
          Select exercises to <%= type %>
        </div>
      </div>

      <div class="container mb-2">
        <div class="fs-6 fw-medium my-1">
          Search
        </div>
        <div class="fs-6 mb-2">
          <form class=" mb-4" action="">
            <input name="calories" type="text" placeholder="Search for exercises..." class="w-100" id="searchBar">
          </form>
        </div>

        <div class="fs-6 fw-medium my-1">
          Exercise List
        </div>

        <div class="fs-6 fw-medium my-1" id="exerciseResults">
        </div>

      </div>

    </div>

    <!-- Bootstrap JS -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <!-- Personal JS -->
    <script src="./scripts/exerciseCatalog.js"></script>

  </body>

</html>